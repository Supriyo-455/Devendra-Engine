{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "Build engine: for linux",
            "command": "${workspaceFolder}/linuxScripts/build.sh",
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "options": {
                "statusbar": {
                    "label" : "build devendra engine"
                }
            }
        },

        {
            "type": "shell",
            "label": "Configure engine: for linux",
            "command": "${workspaceFolder}/linuxScripts/configure.sh",
            "options": {
                "statusbar": {
                    "label" : "configure devendra engine"
                }
            }
        },

        {
            "type": "shell",
            "label": "Run devendra engine: for linux",
            "command": "${workspaceFolder}/linuxScripts/run.sh",
            "options": {
                "statusbar": {
                    "label" : "Run devendra engine"
                }
            }
        }
    ],
}